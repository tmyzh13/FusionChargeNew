<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@mipmap/list_can_bg"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                style="@style/text_normal"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="100度"
                />
            <TextView
                style="@style/text_normal"
                android:textColor="@color/white"
                android:text="@string/tao_can_electronic_hint"
                android:textSize="@dimen/text_small"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">
            <TextView
                style="@style/text_normal"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="@string/tao_can_electronic"
                />
            <TextView
              style="@style/text_normal"
                android:textColor="@color/red"
                android:text="兑换需要话费￥100"
                android:layout_centerVertical="true"
                />
            <TextView
                style="@style/text_normal"
                android:text="2018.02.19-2018.04.10"
                android:layout_alignParentBottom="true"
                />

            
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/line"/>
    <LinearLayout
        android:id="@+id/ll_pay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/list_btn_buy"
            />

        <TextView
            android:layout_marginTop="10dp"
           style="@style/text_normal"
            android:text="@string/buy_right_now"
            />
    </LinearLayout>
</LinearLayout>