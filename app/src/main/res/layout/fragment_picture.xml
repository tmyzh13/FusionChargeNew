<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huawei.fusionchargeapp.views.fragments.PictureFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/charge_pile_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/charge_pile_iv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:visibility="gone"
                />

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/charge_pile_iv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:visibility="gone"
                />

            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/charge_pile_iv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:visibility="gone"
                />
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/has_no_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/pic_no"
        android:drawablePadding="@dimen/dp_8"
        android:padding="@dimen/dp_20"
        android:textSize="@dimen/text_title"
        android:text="@string/has_no_picture"
        android:background="@color/text_white"
        android:visibility="gone"
        />

</FrameLayout>
