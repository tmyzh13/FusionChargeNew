<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:background="@drawable/shape_white_corner"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/upload_phote"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/text_extra"
        android:paddingLeft="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_blue" ></View>

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/camera"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_normal"
        android:backgroundTint="?android:attr/selectableItemBackgroundBorderless"
        android:paddingLeft="15dp" />

    <TextView
        android:id="@+id/tv_photo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/photo"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_normal"
        android:backgroundTint="?android:attr/selectableItemBackgroundBorderless"
        android:paddingLeft="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#669b9b9b"></View>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/cancel"
        android:gravity="center"
        android:textColor="@color/app_blue"
        android:textSize="@dimen/text_normal"
        android:backgroundTint="?android:attr/selectableItemBackgroundBorderless"
        android:paddingLeft="15dp" />

</LinearLayout>