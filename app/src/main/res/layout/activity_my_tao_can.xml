<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <com.huawei.fusionchargeapp.weights.NavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="@dimen/dp_20"
        android:id="@+id/taocan_linear"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@mipmap/list_can_bg"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                style="@style/text_normal"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/tv_hint_1"/>
            <TextView
                style="@style/text_normal"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/tv_hint_2"
                />
            <TextView
                style="@style/text_normal"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"
                android:id="@+id/tv_hint_3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            >
            <TextView
                style="@style/text_normal"
                android:id="@+id/tv_name"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:id="@+id/ll_surplus"
                >
                <TextView
                    style="@style/text_normal"
                    android:text="@string/my_tao_can_surplus"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/text_small"
                    />
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/tv_surpluse"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    style="@style/text_normal"
                    android:text="@string/my_tao_can_end_time"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_small"
                    />
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/tv_end_time"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    style="@style/text_normal"
                    android:text="@string/my_tao_can_buy_time"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_small"
                    />
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/text_small"
                    android:id="@+id/tv_buy_time"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>