<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_margin="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/white"
            >

            <TextView
               style="@style/text_normal"
                android:id="@+id/tv_name"
                android:textSize="@dimen/text_title"
                android:textColor="@color/app_blue"
                android:text="能瑞餐馆"

                />
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <TextView
                    style="@style/text_normal"
                    android:text="@string/home_charge_direct_"
                    />
                <TextView
                    style="@style/text_normal"
                    android:id="@+id/tv_direct"
                    />
                <TextView
                  style="@style/text_normal"
                    android:text="@string/home_charge_hint_"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                   style="@style/text_normal"
                    android:text="@string/home_charge_alternating_"
                    />
                <TextView
                    android:id="@+id/tv_alter"
                    style="@style/text_normal"
                    />
                <TextView
                    style="@style/text_normal"
                    android:text="@string/home_charge_hint_"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42px"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:id="@+id/ll_go_to_detail"
                >
                <TextView
                    style="@style/text_normal"
                    android:text="@string/hint_key_total"
                    />
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/app_blue"
                    android:text="1"
                    android:id="@+id/tv_map_info_pile_num"
                    />
                <TextView
                    style="@style/text_normal"
                    android:text="@string/hint_key_electronic_pile"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_30"
                    style="@style/text_normal"
                    android:text="@string/hint_key_total"
                    />
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/app_blue"
                    android:text="3"
                    android:id="@+id/tv_map_info_gun_num"
                    />
                <TextView
                    style="@style/text_normal"
                    android:text="@string/hint_key_electronic_gun"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_30"
                    style="@style/text_normal"
                    android:text="@string/hint_key_total"
                    />
                <TextView
                    style="@style/text_normal"
                    android:textColor="@color/app_blue"
                    android:id="@+id/tv_map_info_free_num"
                    android:text="10"
                    />
                <TextView
                    style="@style/text_normal"
                    android:text="@string/statue_free"

                    />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                   style="@style/text_normal"
                    android:text="南京市南瑞路23号"
                    android:id="@+id/tv_address"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginRight="100dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:id="@+id/ll_guild"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/list_guaild"
                        />
                    <TextView
                       style="@style/text_normal"
                        android:layout_marginLeft="5dp"
                        android:text="103.6KM"
                        android:id="@+id/tv_distance"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>