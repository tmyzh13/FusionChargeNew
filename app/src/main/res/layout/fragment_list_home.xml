<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <com.corelibs.views.ptr.layout.PtrLollipopLayout
        android:id="@+id/ptrLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.corelibs.views.ptr.loadmore.widget.AutoLoadMoreListView
                android:id="@+id/lv_piles"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="#00000000"
                android:scrollbars="none"
                android:divider="@color/transparent"
                android:dividerHeight="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/empty_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/list_no_data"
                android:drawableTop="@drawable/pic_01"
                android:drawablePadding="@dimen/dp_16"
                android:layout_marginTop="120dp"
                android:textSize="@dimen/text_nav"
                android:visibility="gone">
            </TextView>
        </LinearLayout>


    </com.corelibs.views.ptr.layout.PtrLollipopLayout>

</LinearLayout>