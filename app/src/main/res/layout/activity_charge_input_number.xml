<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huawei.fusionchargeapp.views.ChargeInputNumberActivity">

    <com.huawei.fusionchargeapp.weights.NavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav"></com.huawei.fusionchargeapp.weights.NavBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/pic_input_scan_bg">

        <EditText
            android:id="@+id/et_input_number"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/text_normal"
            android:maxLines="1"
            android:background="@drawable/shape_charge_input_number"
            android:hint="@string/please_input_erweima_number"
            android:maxLength="255"
            />

        <TextView
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/sure"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal"
            android:background="@drawable/shape_charge_input_ok"/>
    </LinearLayout>


</LinearLayout>
