<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    >

    <com.huawei.fusionchargeapp.weights.NavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav"
        />

    <RelativeLayout
        android:id="@+id/invoice_ele"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_ic_01"
                />
            <TextView
                style="@style/text_normal"
                android:text="@string/apply_invoice"
                android:layout_marginLeft="7dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:src="@mipmap/list_ic_back"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        style="@style/view_line"
       />
    <RelativeLayout
        android:id="@+id/invoce_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@color/white"
        android:paddingLeft="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_ic_02"
                />
            <TextView
                style="@style/text_normal"
                android:text="@string/invoice_histroy"
                android:layout_marginLeft="7dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:src="@mipmap/list_ic_back"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>