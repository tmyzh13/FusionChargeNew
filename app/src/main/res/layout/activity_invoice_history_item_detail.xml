<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/publish_bg_color">

    <com.huawei.fusionchargeapp.weights.NavBar
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.huawei.fusionchargeapp.weights.NavBar>

    <TextView
        android:id="@+id/sort_and_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_5"
        android:background="@color/text_white"
        android:text="纸质发票已开票"
        android:textStyle="bold"
        android:textSize="@dimen/text_title"/>

    <TextView
        android:id="@+id/invoice_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        android:layout_gravity="bottom"
        android:background="@color/text_white"
        android:text="2012-04-20 13:22"
        android:textSize="@dimen/text_normal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:text="接收信息"
        android:textStyle="bold"
        android:textSize="@dimen/text_normal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:background="@color/text_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title"
            android:text="详细地址"/>
        <TextView
            android:id="@+id/receive_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="武汉市江夏区户口社区户口28栋"
            android:textStyle="bold"
            android:textSize="@dimen/text_normal"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:text="发票信息"
        android:textStyle="bold"
        android:textSize="@dimen/text_normal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:background="@color/text_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title"
            android:text="发票抬头"/>
        <TextView
            android:id="@+id/invoice_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="武汉软通东西湖技术开发区技术有限公司"
            android:textStyle="bold"
            android:textSize="@dimen/text_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:background="@color/text_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title"
            android:text="税号"/>
        <TextView
            android:id="@+id/tax_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9123 2324 3232 3234de"
            android:textStyle="bold"
            android:textSize="@dimen/text_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:background="@color/text_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title"
            android:text="发票内容"/>
        <TextView
            android:id="@+id/invoice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电动汽车充电消费"
            android:textStyle="bold"
            android:textSize="@dimen/text_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:background="@color/text_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title"
            android:text="发生金额"/>
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99.4元"
            android:textStyle="bold"
            android:textSize="@dimen/text_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:background="@color/text_white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title"
            android:text="申请时间"/>
        <TextView
            android:id="@+id/invoice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99.4元"
            android:textStyle="bold"
            android:textSize="@dimen/text_normal"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/go_consume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/text_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical">
            <TextView
                android:id="@+id/consume_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/invoice_and_consume_num"
                android:textSize="@dimen/text_title"/>

            <TextView
                android:id="@+id/consume_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="2012-04-20 13:22 - 2012-04-20 13:22"
                android:textSize="@dimen/text_small"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:drawablePadding="@dimen/dp_8"
            android:drawableRight="@mipmap/list_ic_back"
            android:text="查看"
            android:textSize="@dimen/text_small"/>
    </FrameLayout>

</LinearLayout>