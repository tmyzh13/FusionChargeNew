<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/publish_bg_color"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_week"
                    android:layout_width="@dimen/item_text_width"
                    android:layout_height="wrap_content"
                    android:text="周二"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="+50"
                    android:textSize="12dp"
                    android:textColor="@color/blue"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="@dimen/item_text_width"
                    android:layout_height="wrap_content"
                    android:text="13:22"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/tv_money_subscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="充值50"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="end|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recharge_sort_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_ic_zhifubao"/>
            <TextView
                android:id="@+id/recharge_sort_name"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_8"
                android:text="支付宝"
                android:textSize="12dp"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>