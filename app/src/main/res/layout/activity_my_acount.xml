<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <com.huawei.fusionchargeapp.weights.NavBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="2dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <TextView
                style="@style/text_normal"
                android:textColor="@color/app_blue"
                android:text="@string/my_acount_balance"

                />
            <TextView
                style="@style/text_normal"
                android:textSize="50sp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:text="0.00"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/rl_rechage"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_ic_01"
                />
            <TextView
                android:layout_marginLeft="7dp"
               style="@style/text_normal"
                android:text="@string/my_acount_recharge"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:src="@mipmap/list_ic_back"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
       style="@style/view_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:id="@+id/rl_detail"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_ic_02"
                />
            <TextView
                android:layout_marginLeft="7dp"
                style="@style/text_normal"
                android:text="@string/my_acount_detail"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:src="@mipmap/list_ic_back"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        style="@style/view_line"/>
    <RelativeLayout
        android:id="@+id/rl_put_foward"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@color/white"
        android:paddingLeft="15dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_ic_03"
                />
            <TextView
                android:layout_marginLeft="7dp"
                style="@style/text_normal"
                android:text="@string/my_acount_put_forward"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:src="@mipmap/list_ic_back"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        style="@style/view_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:id="@+id/rl_invoice"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_ic_04"
                />
            <TextView
                android:layout_marginLeft="7dp"
                style="@style/text_normal"
                android:text="@string/my_acount_invoice"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:src="@mipmap/list_ic_back"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:id="@+id/rl_my_taocan"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_ic_05"
                />
            <TextView
                android:layout_marginLeft="7dp"
                style="@style/text_normal"
                android:text="@string/my_acount_taocan"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp"
            android:src="@mipmap/list_ic_back"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>