<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huawei.fusionchargeapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 从SDCard读取数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA"/>

    <!-- 允许程序打开网络套接字 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许程序设置内置sd卡的写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许程序获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许程序访问WiFi网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序读写手机状态和身份 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 允许程序访问CellID或WiFi热点来获取粗略的位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppBaseCompactTheme">
        <activity
            android:name=".views.WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".views.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ChagerStatueActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.PayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.PayCompleteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.interfaces.ForgetPwdActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.InputNewPwdActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.AppointmentChargeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.AppointSuccessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.interfaces.SearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ChargeDetailsActivity"
            android:screenOrientation="portrait" />

        <service android:name=".views.TimerService" />

        <activity
            android:name=".views.GuildActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ParkActivity"
            android:screenOrientation="portrait" />

        <!-- 支付宝 com.alipay.sdk.app.H5PayActivity -->
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.alipay.sdk.app.H5AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <!-- 微信支付 -->
        <activity
            android:name=".wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="wx5e9afde80150f0e0" />
            </intent-filter>
        </activity>
        <!-- 高德地图 -->
        <!-- 设置key -->
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="0a26d825f50c45a2182e43976c9238dc" />
        <!-- 定位需要的服务 -->
        <service android:name="com.amap.api.location.APSService" />

        <activity
            android:name=".views.ChargeOrderDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".views.ChargeCaptureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.ChargeInputNumberActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.PublishCommentActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".views.SearchStationTitleActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".views.interfaces.MyOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.UserInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.SettingActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity android:name=".views.ImageActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/ImagePickerTheme"></activity>
        <activity
            android:name="com.huawei.fusionchargeapp.views.MyAppointDetailActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".views.mycount.MyAcountActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".views.mycount.MyInvoiceActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".views.RechargeAndConsumeDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".views.mycount.ApplyInvoiceActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".views.mycount.InvoiceDetailActivity"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>